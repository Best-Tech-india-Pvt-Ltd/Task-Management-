  </head>

  <body>
    <div class="log_out_main px-3 mt-2 d-flex justify-content-end">
      <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
    </div>
    <%= yield %>
  </body>
</html>
