<div class="container mt-5 mb-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="d-flex flex row g-0 justify-content-center">
        <div class="col-md-6 mt-3 shadow-lg">
            <div class="card card1 p-3">
                <div class="d-flex flex-column"><span class="login mt-3">Log in</span> </div>
                <% if notice&.present? || alert&.present? %>
                  <div class="flash_alert <%= alert&.present? ? "error" : "success" %>">
                    <%= notice || alert %>
                  </div>
                <% end %>
                <div class="input-field d-flex flex-column mt-3">
                    <span>
                        <%= f.label :email %>
                    </span>
                    <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                    
                    <span class="mt-3">
                        <%= f.label :password %>
                    </span> 
                    <%= f.password_field :password, autocomplete: "current-password",class:"form-control"  %>
                    
                    <%= f.submit "Log in",class:"mt-4 btn btn-primary d-flex justify-content-center align-items-center" %>

                    <div class="mt-3 text1"> 
                        <span class="mt-3 forget">
                            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                        </span>
                    </div>
                    <div class="text2 mt-4 d-flex flex-row align-items-center"> 
                        <span>Don't have an account?
                            <span class="register"><%= link_to "Register here", new_registration_path(resource_name) %><br /></span>
                        </span> 
                    </div>
                </div>
            </div>
        </div>
        </div>
    <% end %>
 </div>