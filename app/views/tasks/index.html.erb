<div class="px-3">
<p id="notice"><%= notice %></p>

<div class="primary_action">
  <%= link_to 'New Task', new_task_path, class:"mt-3 btn btn-primary" %>
</div>

<h1>Tasks</h1>

<div class="table-responsive shadow">
  <table class="table">
      <thead class="table-head-primary">
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Short description</th>
            <th scope="col">Category</th>
            <th scope="col ">Created At</th>
            <th scope="col"></th>
          </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.short_description %></td>
            <td><%= task.category_id %></td>
            <td>
              <div class="links flex mx-auto curd_buttons">
                <%= link_to task do %>
                  <i class="fa-solid fa-eye"></i>
                <% end %>
                <%= link_to  edit_task_path(task) do%>
                  <i class="fa-regular fa-pen-to-square"></i>
                <% end %>
                <%= link_to task, method: :delete, data: { confirm: 'Are you sure?' }, class: "danger_icon" do %>
                  <i class="fa-solid fa-trash danger_icon"></i>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
</div>



