<div class="card card1 p-3 mt-3 mx-auto shadow-lg">
  <%= form_with(model: task, multipart: true) do |form| %>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="input-field d-flex flex-column mt-3 gap-20">
      <div class="field">
        <span class="mt-3 mb-3">
          <%= form.label :title %>
        </span>
        <%= form.text_field :title, class:"form-control" %>
      </div>

      <div class="field">
        <span class="mt-3 mb-3">
          <%= form.label :short_description %>
        </span>
        <%= form.text_area :short_description, class:"form-control" %>
      </div>

      <div class="field">
        <span class="mt-3 mb-3">
          <%= form.label :category_id %>
        </span>
        <%= form.select :category_id, options_for_select(category_options),{},{class:"form-control" }%>
      </div>

      <div class="field">
        <span class="mt-3 mb-3">
          <%= form.label :files %>
        </span>
        <%= form.file_field :files, multiple: true, class:"form-control" %>
      </div>

      <div class="actions">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
